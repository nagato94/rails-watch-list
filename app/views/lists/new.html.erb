
<div class="container shadow p-3 mb-5 bg-transparent mt-5 rounded w-50">
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'cinema.jpg'%>);">
  <div class="container">
  <h2 class="mt-5 text-white text-center">Add new list</h2>
  </div>
</div>

  <%= simple_form_for @list, html: { class: 'mt-3' } do |f| %>
      <%= f.input :photo, as: :file %>
      <%= f.input :name, class: 'form-control', placeholder: 'List name' %>
      <%= f.button :submit, "Create List", class: 'botao btn btn-success' %>
  <% end %>
</div>
