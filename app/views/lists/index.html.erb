
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'cinema2.jpg'%>); ">
    <h1 class="text-center">Save any kind of movies</h1>
  </div>

<div class="cover mb-4 d-flex align-items-center justify-content-center" >
  <div class="text-center">
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
    <h2 class="mb-0 text-center">My Lists</h2>
  <div class="d-flex align-items-center justify-content-between mb-3">
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
         <% if list.photo.attached? %>
          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, crop: :fill %>)">
          <% else %>
           <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path 'cinema2.jpg' %>)">
          <% end %>

            <%= list.name.capitalize %>

          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
