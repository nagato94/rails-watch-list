<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'cinema.jpg'%>);">
  <div class="container">
    <h1 class="text-center">Your List</h1>
  </div>
</div>

<div class="container shadow p-3 mb-5 bg-white mt-5 rounded">
  <h2 class="mt-4">Your Lists</h2>

  <ul class="list-group">
    <% @lists.each do |list| %>
      <li class="list-group-item rounded m-1 p-3 border-0">
        <div class="d-flex align-items-center justify-content-between">
          <i class="fa-solid fa-video"></i>
          <%= link_to list.name, list_path(list), class: "text-decoration-none mx-2 flex-grow-1" %>
        
        </div>
      </li>
    <% end %>
  </ul>

  <%= link_to new_list_path, class: "btn btn-success mt-3" do %>
    <i class="fa-solid fa-plus"></i> Add list
  <% end %>
</div>
